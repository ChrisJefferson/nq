all:
	(cd src; make)
	@if test ! -d bin;  then mkdir bin; fi
	@if test ! -d bin/@GAPARCH@;  then mkdir bin/@GAPARCH@; fi
	mv src/nq bin/@GAPARCH@/
	(cd doc; make)

clean:
	rm Makefile
	(cd src; make clean)
	(cd doc; make clean)

spotless:
	rm Makefile
	(cd src; make spotless)
	(cd doc; make spotless)
