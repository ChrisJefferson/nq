##
##    Makefile                      NQ                         Werner Nickel
##
##    $Id$
##

##
##    This makefile needs to be called with 
##
##                        make GAP_ROOT=<gap-root-dir>
##

GAP_ROOT=../../..

manual.dvi: manual.tex
	tex manual
	tex manual

manual.tex: manual.in
	@echo "%%"                                               > manual.tex
	@echo "%%  This file was generated automatically from"  >> manual.tex
	@echo "%%  manual.in.  Do not edit this file, edit   "  >> manual.tex
	@echo "%%  manual.in instead."                          >> manual.tex
	@echo "%%"                                              >> manual.tex
	@echo "Creating manual.tex from manual.in"
	@sed -e "s%@GAP_ROOT@%$(GAP_ROOT)%" < manual.in         >> manual.tex

clean:
	rm -f manual.aux manual.dvi manual.idx manual.log 

spotless: clean
	rm -f manual.lab manual.six manual.toc manual.tex
